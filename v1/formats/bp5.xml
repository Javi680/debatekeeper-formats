      <name xml:lang="es">Vicelíder de la oposoción</name>
    </speech>
    <speech type="all">
      <name xml:lang="en">Member for the Government</name>
      <name xml:lang="es">Miembro del gobierno</name>
    </speech>
    <speech type="all">
      <name xml:lang="en">Member for the Opposition</name>
      <name xml:lang="es">Miembro de la oposoción</name>
    </speech>
    <speech type="all">
      <name xml:lang="en">Government Whip</name>
      <name xml:lang="es">Látigo del gobierno</name>
    </speech>
    <speech type="all">
      <name xml:lang="en">Opposition Whip</name>
      <name xml:lang="es">Látigo de la oposoción</name>
