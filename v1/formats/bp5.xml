<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.2">
  <name xml:lang="en">British Parliamentary (5 minutes)</name>
  <name xml:lang="es">Parlamentario Británico (5 minutos)</name>
  <short-name xml:lang="en">BP (5 minutes)</short-name>
  <short-name xml:lang="es">BP (5 minutos)</short-name>
  <version>2</version>
  <languages>
    <language>en</language>
    <language>es</language>
  </languages>
  <info xml:lang="en">
    <region>United Kingdom</region>
    <level>University</level>
    <used-at>Various UK IVs/Opens</used-at>
    <used-at>Welsh Novices</used-at>
    <description>Four teams of two, 5-minute speeches, POIs allowed</description>
  </info>
  <info xml:lang="es">
    <region>Reino Unido</region>
    <level>Universidad</level>
    <used-at>Varios torneos en el Reino Unido</used-at>
    <used-at>Welsh Novices</used-at>
    <description>Cuatro equipos de dos oradores, discursos de 5 minutos, los PdI permitidos</description>
  </info>
  <prep-time length="15:00"/>
  <speech-types>
    <speech-type ref="all" length="5:00" first-period="normal">
      <name xml:lang="en">all</name>
      <name xml:lang="es">todos</name>
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="4:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="all">
      <name xml:lang="en">Prime Minister</name>
      <name xml:lang="es">Primer ministro</name>
    </speech>
    <speech type="all">
      <name xml:lang="en">Leader of the Opposition</name>
