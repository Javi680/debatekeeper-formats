<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.2">
  <name xml:lang="en">Spanish Academic</name>
  <name xml:lang="es">Académico español</name>
  <version>2</version>
  <languages>
    <language>en</language>
    <language>es</language>
  </languages>
  <info xml: lang="en">
    <region>Spain and Latin America</region>
    <level>University</level>
    <used-at>Spanish Debate Associations</used-at>
    <description>Two teams of four, POIs allowed, Introductory: 4 min, 1st Refutation: 5 min, 2nd Refutation: 5 min, Conclusion: 3 min</description>
  </info>
    <info xml: lang="es">
    <region>España y Latinoamérica</region>
    <level>Universidad</level>
    <used-at>Asociaciones de debate</used-at>
    <description>Dos equipos de cuatro, se permiten preguntas durante las refutaciones, Introducción: 4 min, 1ª Refutación: 5 min, 2ª Refutación: 5 min, Conclusión: 3 min</description>
  </info>
  <speech-types>
    <speech-type ref="introductory" length="4:00" first-period="normal">
      <name xml:lang="en">Introductory</name>
      <name xml:lang="es">Introducción</name>
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="3:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="refutation" length="5:00" first-period="normal">
      <name xml:lang="en">Refutation</name>
      <name xml:lang="es">Refutación</name>
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="4:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="conclusion" length="3:00" first-period="normal">
      <name xml:lang="en">Conclusion</name>
      <name xml:lang="es">Conclusión</name>
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="2:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="introductory">
      <name xml:lang="en">In favour - Introductory</name>
      <name xml:lang="es">A favor - Introducción</name>
    </speech>
    <speech type="introductory">
      <name xml:lang="en">Against - Introductory</name>
      <name xml:lang="es">En contra - Introducción</name>
    </speech>
    <speech type="refutation">
      <name xml:lang="en">In favour - First refutation</name>
      <name xml:lang="es">A favor - Primera refutación</name>    
    </speech>
    <speech type="refutation">
      <name xml:lang="en">Against - First refutation</name>
      <name xml:lang="es">En contra - Primera refutación</name>    
    </speech>
    <speech type="refutation">
      <name xml:lang="en">In favour - Second refutation</name>
      <name xml:lang="es">A favor - Segunda refutación</name>  
    </speech>
    <speech type="refutation">
      <name xml:lang="en">Against - Second refutation</name>
      <name xml:lang="es">En contra - Segunda refutación</name>
    </speech>
    <speech type="conclusion">
      <name xml:lang="en">Against - Conclusion</name>
      <name xml:lang="es">En contra - Conclusión</name>
    </speech>
    <speech type="conclusion">
      <name xml:lang="en">In favour - Conclusion</name>
      <name xml:lang="es">A favor - Conclusión</name>
    </speech>
  </speeches>
</debate-format>
